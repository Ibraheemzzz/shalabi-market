# ─── Server ───────────────────────────────────────────────────────────────────
PORT=3001
NODE_ENV=development        # development | production

# ─── Database ─────────────────────────────────────────────────────────────────
DATABASE_URL=postgresql://user:password@host:5432/dbname

# ─── JWT ──────────────────────────────────────────────────────────────────────
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_min_32_chars
JWT_EXPIRES_IN=7d
JWT_GUEST_EXPIRES_IN=1d

# ─── CORS ─────────────────────────────────────────────────────────────────────
# Comma-separated list of allowed origins (leave empty to allow all in dev)
ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,https://yourdomain.com

# ─── File Upload ──────────────────────────────────────────────────────────────
MAX_FILE_SIZE=5242880       # 5 MB in bytes
UPLOAD_PATH=./uploads

# ─── Logging ──────────────────────────────────────────────────────────────────
LOG_LEVEL=debug             # error | warn | info | http | debug

# Optional: override registration rate limit per IP (defaults: prod=10/hour, dev=20/hour)
REGISTER_RATE_LIMIT_MAX=
